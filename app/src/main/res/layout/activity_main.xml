<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/dark"
    android:padding="20dp"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_calculate_24"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/calculateIMC_STR"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"

            />

        <EditText
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_light"
            android:textColorHint="@color/green_light"
            android:hint="@string/weightKG"
            android:textColor="@color/white"
            android:paddingVertical="20dp"
            android:layout_marginBottom="20dp"
            android:inputType="numberDecimal"
            android:id="@+id/edit_weight"
            />

        <EditText
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_light"
            android:textColorHint="@color/green_light"
            android:hint="@string/Height"
            android:textColor="@color/white"
            android:paddingVertical="20dp"
            android:inputType="numberDecimal"
            android:id="@+id/edit_height"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calculateText"
            android:backgroundTint="@color/green_light"
            android:textColor="@color/dark"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/button_calculate"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/information"
            android:textColor="@color/green_light"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textSize="22sp"
            android:id="@+id/text_information"
            android:textAlignment="center"
            />



    </LinearLayout>

</LinearLayout>